{
    "functions": {
      "src/api/*.js": {
        "memory": 128,
        "maxDuration": 10,
        "runtime": "nodejs22.x"
      }
    },
    "crons": [
      {
        "path": "/api/scrape",
        "schedule": "0 0 * * *"
      }
    ],
    "headers": [
      {
        "source": "/api/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "s-maxage=3600"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/:path*",
        "destination": "/src/api/index.js"
      }
    ]
  }